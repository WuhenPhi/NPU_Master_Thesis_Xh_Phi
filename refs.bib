	journal = {Nano Energy},
	author = {Tchoe, Youngbin and Song, Minho S. and Kim, Heehun and Baek, Hyeonjun and Park, Joon Young and Oh, Hongseok and Lee, Keundong and Chung, Kyungmin and Hyun, Jerome K. and Yi, Gyu-Chul},
	month = oct,
