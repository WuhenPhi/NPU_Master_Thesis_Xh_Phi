	note = {Publisher: American Chemical Society},
	pages = {47739--47746},
	file = {Full Text PDF:D\:\\Projects\\Zotero\\storage\\BRKDDR9F\\Magari 等 - 2020 - Record-High-Performance Hydrogenated In–Ga–Zn–O Flexible Schottky Diodes.pdf:application/pdf},
